{
  "name": "source-retriever-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server that retrieves Java source from local Maven repo and returns it as MCP content.",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node --esm src/server.ts",
    "check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "*",
    "adm-zip": "^0.5.12",
    "fs-extra": "^11.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^2.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  }
}
